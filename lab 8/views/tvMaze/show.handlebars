<article>
    <h1>{{name}}</h1>
    <img alt="{{name}}" src="{{image}}" />
    <dl>
        <dt>Language</dt>
        <dd>{{language}}</dd>
        <dt>Genres</dt>
        <dd>
            {{#if genres}}
            <ul>
                {{#each genres}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
            {{else}}
            N/A
            {{/if}}
        </dd>
        <dt>Average Rating</dt>
        <dd>{{rating}}</dd>
        <dt>Network</dt>
        <dd>{{network}}</dd>
        <dt>Summary</dt>
        <dd>{{summary}}</dd>
    </dl>
</article>